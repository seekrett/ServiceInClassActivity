<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyApplication" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- START BUTTON STYLE -->
    <style name="Theme.MyApplication.Start" parent="Widget.AppCompat.Button">
        <!-- COLOR -->
        <item name="android:textColor">@color/dark_grey</item>
        <item name="backgroundTint">@color/green</item>
    </style>

    <!-- STOP BUTTON STYLE -->
    <style name="Theme.MyApplication.Stop" parent="Widget.AppCompat.Button">
        <!-- COLOR -->
        <item name="android:textColor">@color/dark_grey</item>
        <item name="backgroundTint">@color/red</item>
    </style>

</resources>